user www-data;
worker_processes auto;
pid /run/nginx.pid;

events {
        worker_connections 768;
        # multi_accept on;
}

http {

  server {
      listen       80;

      location / {
        proxy_pass http://localhost:3000/;
      }

      location /api {
        proxy_pass http://localhost:8000/api;
      }

  }
}